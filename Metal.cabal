category:            Language
build-type:          Simple
extra-source-files:  ChangeLog.md, README.md
cabal-version:       >=1.10

executable Metal
  main-is:             Main.hs
  -- other-modules:
  -- other-extensions:
  ghc-options:         -Wall
  build-depends:       base >=4.9 && <4.10
                     , megaparsec >=5.2 && <5.3
                     , mtl
                     , transformers
                     , containers
  hs-source-dirs:      src
  default-language:    Haskell2010

test-suite spec
  type:                exitcode-stdio-1.0
  main-is:             Tests.hs
  hs-source-dirs:      test, src
  ghc-options:         -O0 -Wall
  build-depends:       base == 4.*
                     , hspec == 2.*
                     , hspec-megaparsec
                     , megaparsec >=5.2 && <5.3
                     , HUnit
                     , containers
                     , mtl
                     , transformers
  other-modules:       Syntax.ParserSpec
  default-language:    Haskell2010
